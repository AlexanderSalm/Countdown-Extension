<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.countdown@alikay" path="/org/gnome/shell/extensions/countdown@alikay/">
    <!-- See also: https://docs.gtk.org/glib/gvariant-format-strings.html -->
    <key name="show-msec" type="b">
      <default>false</default>
    </key>
    <key name="show-sec" type="b">
      <default>true</default>
    </key>
    <key name="show-min" type="b">
      <default>true</default>
    </key>
    <key name="show-hour" type="b">
      <default>true</default>
    </key>
    <key name="show-days" type="b">
      <default>true</default>
    </key>
    <key name="text" type="s">
      <default>"Countdown"</default>
    </key>
    <key name="sep" type="s">
      <default>": "</default>
    </key>
    <key name="expand-text" type="b">
      <default>false</default>
    </key>
    <key name="update-frequency" type="d">
      <default>1.0</default>
    </key>
    
    <key name="target-hour" type="d">
      <default>0.0</default>
    </key>
    <key name="target-minute" type="d">
      <default>0.0</default>
    </key>
    <key name="target-second" type="d">
      <default>0.0</default>
    </key>
    <key name="target-year" type="d">
      <default>2022</default>
    </key>
    <key name="target-month" type="d">
      <default>1</default>
    </key>
    <key name="target-day" type="d">
      <default>1</default>
    </key>
    <key name="notif" type="b">
      <default>true</default>
    </key>
  </schema>
</schemalist>
